<h1>Edit News</h1>
<%= form_with model: new, url: update_news_path, data: { "turbo-method": :patch }, local: true, scope: :new do |f| %>
<div>
  <%= f.label :title %><br>
  <%= f.text_field :title %>
</div>

<div>
  <%= f.label :subtitle %><br>
  <%= f.text_field :subtitle %>
</div>

<div>
  <%= f.label :content %><br>
  <%= f.rich_text_area :content %>
</div>

<div>
  <%= f.label :image %><br>
  <%= f.file_field :image,
        placeholder: 'Upload picture',
        direct_upload: true %>
</div>

  <div>
    <% if new.image.attached? %>
    <%= image_tag(url_for(new.image)) %>
    <% end%>
  </div>

<%= f.submit "Update News" %>

<% end %>

<%= link_to "Back", news_show_path %>

<% flash.each do |type, msg| %>
  <div class="alert alert-info">
    <%= msg %>
  </div>
<% end %>