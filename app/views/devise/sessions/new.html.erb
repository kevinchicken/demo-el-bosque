<section class="vh-100">
  <div class="container-fluid">
    <div class="row">
      <div class="col-sm-6 text-black">
        <div class="px-5 ms-xl-4">
          <i class="fas fa-crow fa-2x me-3 pt-5 mt-xl-4" style="color: #709085;"></i>
          <span class="h1 fw-bold mb-1">Demo El Bosque</span>
        </div>
        <div class="d-flex align-items-center h-custom-2 px-5 ms-xl-4 mt-5 pt-5 pt-xl-0">
          <%= form_for(resource, html: { style: "width: 23rem;" }, as: resource_name, url: session_path(resource_name)) do |f| %>
            <h3 class="fw-normal mb-3 pb-3" style="letter-spacing: 1px;">Iniciar sesi√≥n</h3>
            <div class="form-outline mb-4">
              <%= f.label :email, class:"form-label" %><br />
              <%= f.email_field :email, autofocus: true, autocomplete: "email", class:"form-control form-control-lg" %>
            </div>

            <div class="form-outline mb-4">
              <%= f.label :password, class:"form-label" %><br />
              <%= f.password_field :password, autocomplete: "current-password", class:"form-control form-control-lg" %>
            </div>

            <% if devise_mapping.rememberable? %>
              <div class="form-outline mb-4">
                <%= f.check_box :remember_me %>
                <%= f.label :remember_me %>
              </div>
            <% end %>

            <div class="pt-1 mb-4">
              <%= f.submit "Log in", class:"btn btn-info btn-lg btn-block" %>
            </div>
            <%= render "devise/shared/links" %>
          <% end %>
        </div>
      </div>
      <div class="col-sm-6 px-0 d-none d-sm-block">
        <img src="https://lh5.googleusercontent.com/p/AF1QipM-Y2EnufGjf_ffK8_egjpsU6_bA0rLDKcYHBOM=w487-h240-k-no"
          alt="Login image" class="w-100 vh-100" style="object-fit: cover; object-position: left;">
      </div>
    </div>
  </div>
</section>
